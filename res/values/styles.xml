<!-- This file contains resource definitions for style.  A style is
     a collection of named values that can be applied as a group.  Here,
     we are using a style to define a common set of XML attributes that
     will be used in multiple tags. -->

<resources>
    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="SomeoneSays">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AgnesSays" parent="SomeoneSays">
        <item name="android:background">@color/red</item>
        <item name="android:text">@string/mothershipSays</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EddieSays" parent="SomeoneSays">
        <item name="android:background">@color/blue</item>
        <item name="android:text">@string/eddieSays</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>

